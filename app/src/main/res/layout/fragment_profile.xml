<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profle.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@drawable/bg_profile">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/sample_avatar"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_avatar" />

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_profile" />

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/profile"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/pengaturanAccbtn"
            app:layout_constraintTop_toBottomOf="@+id/email_profile"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/pengaturanAccbtn"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/button_outline"
            android:drawablePadding="8dp"
            android:text="@string/pengaturan_akun"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/pengaturanBhsbtn"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/button_outline"
            android:drawablePadding="8dp"
            android:text="@string/riwayat"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/pengaturanAccbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/aboutUsBtn"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/button_outline"
            android:drawablePadding="8dp"
            android:text="@string/tentang_kami"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/pengaturanBhsbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/button_danger"
            android:drawablePadding="8dp"
            android:text="@string/logout"
            android:fontFamily="@font/poppinsbold"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/aboutUsBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>