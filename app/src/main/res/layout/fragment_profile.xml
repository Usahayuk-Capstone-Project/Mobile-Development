<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profle.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@drawable/bg_profile">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_circle_full_24"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fullname"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsbold"
            app:layout_constraintTop_toBottomOf="@+id/img_avatar"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsmedium"
            app:layout_constraintTop_toBottomOf="@+id/name_profile"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/poppinsbold"
            app:layout_constraintTop_toBottomOf="@+id/email_profile"
            android:layout_marginTop="48dp"
            android:textSize="20sp"
            android:layout_marginStart="24dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/pengaturanAccbtn"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/button_outline"
            android:drawablePadding="8dp"
            android:text="Pengaturan Akun"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/pengaturanBhsbtn"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/button_outline"
            android:drawablePadding="8dp"
            android:text="Pengaturan Bahasa"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/pengaturanAccbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/aboutUsBtn"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/button_outline"
            android:drawablePadding="8dp"
            android:text="Tentang Kami"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/pengaturanBhsbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/button_danger"
            android:drawablePadding="8dp"
            android:text="@string/logout"
            android:fontFamily="@font/poppinsbold"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/aboutUsBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>