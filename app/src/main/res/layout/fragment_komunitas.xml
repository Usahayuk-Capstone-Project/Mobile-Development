<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/green_surface"
        tools:context=".ui.community.KomunitasFragment">

        <TextView
            android:id="@+id/txtTitleKomunitas"
            android:layout_width="314dp"
            android:layout_height="26dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/tittlekomunitas1"
            android:textColor="@color/green_main"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="345dp"
            android:layout_height="206dp"
            android:layout_marginTop="36dp"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtTitleKomunitas"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleKomunitas">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/cardkomunitas" />

            <TextView
                android:id="@+id/txtCard1"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="155dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/cardtext1"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="345dp"
            android:layout_height="206dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtTitleKomunitas"
            app:layout_constraintTop_toBottomOf="@+id/cardview1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/cardkomunitas" />

            <TextView
                android:id="@+id/txtCard2"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="155dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/cardtext1"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtTitleKomunitas2"
            android:layout_width="314dp"
            android:layout_height="26dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/titlekomunitas2"
            android:textColor="@color/green_main"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/cardview2"
            app:layout_constraintTop_toBottomOf="@+id/cardview2" />

        <Button
            android:id="@+id/button"
            android:layout_width="342dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_outline"
            android:drawableLeft="@drawable/baseline_chat_24"
            android:drawablePadding="8dp"
            android:text="@string/nama_komunitas"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="@+id/txtTitleKomunitas2"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleKomunitas2"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|end"
            android:layout_margin="30dp"
            android:backgroundTint="@color/green_main"
            android:src="@drawable/baseline_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
